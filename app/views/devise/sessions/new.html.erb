<div class="container login">
  <div class="login-box mt-5">
    <%= image_tag("login_logo.png") %>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    label: "Email:",
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "mt-3 mb-3", style: "background: lightgray"} %>
        <%= f.input :password,
                    label: "Password:",
                    required: false,
                    input_html: { autocomplete: "current-password", class: "mt-3 mb-3", style: "background: lightgray" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Login", class: "mt-3 btn-secondary d-block", style: "margin: 0 auto; width: 25%" %>
      </div>

      <div class="social-login">
      Login with:
        <a href="#"><i class="fab fa-github"></i></a>
        <a href="#"><i class="fab fa-google"></i></a>
        <a href="#"><i class="fab fa-facebook"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
      </div>

    <% end %>


  </div>
  <div class="text-center mt-3 recover-links"><%= render "devise/shared/links" %></div>
</div>
