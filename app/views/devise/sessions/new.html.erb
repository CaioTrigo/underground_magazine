
<div class="container login">
  <div class="home_logo">
    <img src="<%= image_path('login_logo.png') %>" />
  </div>
  <div class="login-box mt-5">
    <h2 class="mb-3">Login</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    label: "Email:",
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "mt-3 mb-3", style: "background: lightgray"} %>
        <%= f.input :password,
                    label: "Password:",
                    required: false,
                    input_html: { autocomplete: "current-password", class: "mt-3 mb-3", style: "background: lightgray" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Login", class: "mt-3 btn-secondary d-block", style: "margin: 0 auto; width: 25%" %>
      </div>

      <div class="d-inline d-flex brand-icons mt-5 space-between">
        <div class="row text-center">
            <div class="footer-links">
              <a href="#"><i class="fab fa-github"></i></a>
              <a href="#"><i class="fab fa-instagram"></i></a>
              <a href="#"><i class="fab fa-facebook"></i></a>
              <a href="#"><i class="fab fa-twitter"></i></a>
              <a href="#"><i class="fab fa-linkedin"></i></a>
            </div>
        </div>
      </div>
    <% end %>


  </div>
  <div class="text-center mt-3 recover-links"><%= render "devise/shared/links" %></div>
</div>
